{
  "name": "@autoguru/overdrive",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"{*,src/**/*}.+(js|jsx|ts|tsx|css|scss|json|yml|md|mdx|html)\"",
    "lint": "concurrently \"yarn:lint:ts\" \"yarn:lint:styles\"",
    "lint:styles": "stylelint --ignore-path .gitignore --fix \"packages/**/*.+(scss|css)\"",
    "lint:ts": "tsc --noEmit && tslint --fix --project tsconfig.json",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "package.json": [
        "npx sort-package-json",
        "git add"
      ],
      "*.{js,jsx,ts,tsx,css,scss,json,yml,md,mdx,html}": [
        "prettier --write",
        "git add"
      ],
      "*.{js,tsx,ts,tsx}": [
        "jest --bail --findRelatedTests",
        "git add"
      ],
      "*.{scss,css}": [
        "stylelint --ignore-path .gitignore --fix",
        "git add"
      ]
    },
    "relative": true
  },
  "devDependencies": {
    "@types/node": "^11.9.5",
    "concurrently": "^4.1.0",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "jest-junit": "^6.3.0",
    "lerna": "^3.13.0",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "stylelint": "^9.10.0",
    "stylelint-config-css-modules": "^1.3.0",
    "stylelint-config-prettier": "^5.0.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.5.4",
    "tslib": "^1.9.3",
    "tslint": "^5.13.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^3.6.0",
    "typescript": "3.4.0-dev.20190207"
  }
}
