{
	"extends": "@autoguru/tsconfig/web",
	"compilerOptions": {
		"baseUrl": "./",
		"rootDir": "./",
		"jsx": "react",
		"outDir": "./dist",
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "./dist/",
		"isolatedModules": true,
		"strict": true,
		"sourceMap": false,
		"inlineSourceMap": false,
		"strictNullChecks": false,
		"target": "es2019",
		"incremental": true,
		"composite": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": [
		"./reset.ts",
		"./themes.ts",
		"./index.ts",
		"./lib/**/*.ts",
		"./lib/**/*.tsx"
	],
	"exclude": ["./**/*stories*.tsx"]
}
