{
	"extends": "@autoguru/tsconfig/web",
	"compilerOptions": {
		"baseUrl": "./",
		"rootDir": "./",
		"jsx": "react",
		"outDir": "./dist",
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "./dist/",
		"isolatedModules": true,
		"strict": true,
		"sourceMap": false,
		"inlineSourceMap": false,
		"strictNullChecks": false,
		"incremental": true,
		"composite": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowJs": true,
		"target": "esnext",
		"module": "esnext",
		"lib": ["dom"],
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"suppressImplicitAnyIndexErrors": true,
		"noImplicitAny": false,
		"strictFunctionTypes": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true
	},
	"include": [
		"./index.ts",
		"./themes.ts",
		"./lib/**/*.ts",
		"./lib/**/*.tsx"
	],
	"ts-node": {
		"compilerOptions": {
			"module": "ESNext",
			"resolveJsonModule": true,
			"noImplicitAny": false
		}
	},
	"exclude": [
		"./**/*stories*.tsx"
	]
}
